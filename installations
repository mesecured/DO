ansible playbook
 nano playbook.yml

nano file ke andar
---
- name: Install Nginx
  hosts: my_group
  become: yes
  tasks:
    - name: Update package repositories
      package:
        name: "{{ item }}"
        state: latest
      with_items:
        - nginx

    - name: Start Nginx service
      service:
        name: nginx
        state: started
        enabled: yes

after saving file

ansible-playbook nginx-playbook.yml -i






